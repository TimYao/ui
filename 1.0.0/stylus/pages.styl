.page-group
  padding-left: 0
  margin: 0
  list-style: none
  text-align: center
  clearfix()
  li
    display: inline-block
    margin: 0 5px
    page-variant()
    &.page-number
      page-size()
      > a
          border-radius(4px)
    > a,span
      display: inline-block
      line-height: $line-height-base
    > a:hover,
    > a:focus,
    > a:active,
    > a.active
      text-decoration: none
    page-status()
  .page-total
    margin: 0 20px 0 0
  .page-go
    margin:0 0 0 20px
    input[type="text"]
      outline: none
      border-style: solid
      border-width: 1px
      border-radius(4px)
      size(50px, auto)
    > a
      margin: 0 0 0 5px

 .page-simple
   li
     &.page-number
       > span
         padding: 0























